<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mgnl.nicki</groupId>
	<artifactId>nicki-parent</artifactId>
	<version>1.52-SNAPSHOT</version>
	<name>nicki-parent</name>
	<packaging>pom</packaging>
	<url>http://mgnl.org/nicki</url>
	<properties>
		<project.build.sourceEncoding>iso-8859-1</project.build.sourceEncoding>
	</properties>
	<modules>
		<module>nicki-config-rhi</module>
		<module>nicki-core</module>
		<module>nicki-db</module>
		<module>nicki-dynamic-objects</module>
		<module>nicki-dynamic-objects-ad</module>
		<module>nicki-editor-scripts</module>
		<module>nicki-editor-templates</module>
		<module>nicki-ldap</module>
		<module>nicki-reports</module>
		<module>nicki-template</module>
		<module>nicki-vaadin-base</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.3</version>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>https://svn.hirning.de/svn/repos/nicki/nicki/tags/${project.artifactId}</tagBase>
					<autoversionsubmodules>true</autoversionsubmodules>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-7</version>
			</extension>
		</extensions>
	</build>
	<scm>
		<connection>scm:svn:https://svn.hirning.de/svn/repos/nicki/nicki/trunk</connection>
		<developerConnection>scm:svn:https://svn.hirning.de/svn/repos/nicki/nicki/trunk</developerConnection>
		<url>https://svn.hirning.de/svn/repos/nicki/nicki/tags/nicki-parent</url>
	</scm>
	<repositories>
		<repository>
			<id>hirning.de</id>
			<url>ftp://hirning.de/repo</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>hirning.de</id>
			<url>ftp://hirning.de/repo</url>
		</repository>
	</distributionManagement>
</project>
