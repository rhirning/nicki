<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mgnl.nicki</groupId>
	<artifactId>nicki-parent</artifactId>
	<version>1.12</version>
	<name>nicki-parent</name>
	<packaging>pom</packaging>
	<url>http://mgnl.org/nicki</url>
	<properties>
		<project.build.sourceEncoding>iso-8859-1</project.build.sourceEncoding>
		<nicki-config-rhi.version>1.2</nicki-config-rhi.version>
		<nicki-core.version>1.3</nicki-core.version>
		<nicki-db.version>1.1</nicki-db.version>
		<nicki-dynamic-objects.version>1.1</nicki-dynamic-objects.version>
		<nicki-editor-bu.version>1.0</nicki-editor-bu.version>
		<nicki-editor-mailtemplates.version>1.0</nicki-editor-mailtemplates.version>
		<nicki-editor-projects.version>1.0</nicki-editor-projects.version>
		<nicki-editor-scripts.version>1.0</nicki-editor-scripts.version>
		<nicki-editor-shops.version>1.0</nicki-editor-shops.version>
		<nicki-editor-templates.version>1.0</nicki-editor-templates.version>
		<nicki-ldap.version>1.1</nicki-ldap.version>
		<nicki-mailtemplate.version>1.1</nicki-mailtemplate.version>
		<nicki-novell-userapp.version>1.1</nicki-novell-userapp.version>
		<nicki-template.version>1.1</nicki-template.version>
		<nicki-vaadin-base.version>1.2</nicki-vaadin-base.version>
	</properties>
	<modules>
		<module>nicki-config-rhi</module>
		<module>nicki-core</module>
		<module>nicki-db</module>
		<module>nicki-dynamic-objects</module>
		<module>nicki-dynamic-objects-ad</module>
		<module>nicki-editor-mailtemplates</module>
		<module>nicki-editor-projects</module>
		<module>nicki-editor-scripts</module>
		<module>nicki-editor-shops</module>
		<module>nicki-editor-templates</module>
		<module>nicki-ldap</module>
		<module>nicki-mailtemplate</module>
		<module>nicki-novell-userapp</module>
		<module>nicki-shop</module>
		<module>nicki-template</module>
		<module>nicki-test</module>
		<module>nicki-vaadin-base</module>
		<module>nicki-war</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.3</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<tagBase>https://svn.hirning.de/svn/repos/nicki/nicki/tags/${project.artifactId}</tagBase>
					<autoversionsubmodules>true</autoversionsubmodules>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-7</version>
			</extension>
		</extensions>
	</build>
	<scm>
		<connection>scm:svn:https://svn.hirning.de/svn/repos/nicki/nicki/tags/nicki-parent/nicki-parent-1.12</connection>
		<developerConnection>scm:svn:https://svn.hirning.de/svn/repos/nicki/nicki/tags/nicki-parent/nicki-parent-1.12</developerConnection>
		<url>scm:svn:https://svn.hirning.de/svn/repos/nicki/nicki/tags/nicki-parent/nicki-parent-1.12</url>
	</scm>
	<repositories>
		<repository>
			<id>hirning.de</id>
			<url>ftp://hirning.de/repo</url>
		</repository>
	</repositories>
	<distributionManagement>
		<repository>
			<id>hirning.de</id>
			<url>ftp://hirning.de/repo</url>
		</repository>
	</distributionManagement>
</project>
